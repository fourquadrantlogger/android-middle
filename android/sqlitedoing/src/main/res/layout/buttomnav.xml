<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@color/moedark"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayout_query"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:orientation="vertical"
        android:layout_weight="0.333">

        <ImageView
            android:src="@drawable/query"
            android:scaleType="centerInside"
            android:layout_weight="0.8"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/imageView_query"/>
        <TextView
            android:text="查询"
            android:id="@+id/textView_query"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/moeblack"
            android:layout_weight="0.2"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_add"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:orientation="vertical"
        android:layout_weight="0.333">
        <ImageView
            android:src="@drawable/add"
            android:scaleType="centerInside"
            android:layout_weight="0.8"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/imageView_add"
           />
        <TextView
            android:text="新增"
            android:id="@+id/textView_add"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/moeblack"
            android:layout_weight="0.2"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_update"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:orientation="vertical"
        android:layout_weight="0.333">
        <ImageView
            android:src="@drawable/update"
            android:scaleType="centerInside"
            android:layout_weight="0.8"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/imageView_update" />
        <TextView
            android:id="@+id/textView_update"
            android:text="修改"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/moeblack"
            android:layout_weight="0.2"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>